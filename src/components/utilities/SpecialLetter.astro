---
interface Props {
  number: number;
  letter: string;

}
const { number, letter } = Astro.props;
---

<span style=`--i:${number}`>{letter}</span>

<style>
  span {
    display: inline-block;
  user-select: none;
  -webkit-text-stroke: 2px var(--clr-accent-400);
    letter-spacing: 5px;
    font-size: 1.5rem;
    text-transform: uppercase;
    animation: flip 7s infinite;
    animation-delay: calc(0.13s * var(--i));
  }
  @keyframes flip {
  0%,80% {
    transform: rotateY(360deg) 
  }
}
</style>
