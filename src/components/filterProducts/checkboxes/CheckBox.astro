---
interface Props{
    inputValue: string;
    CSSInputClass: string;
    product_quantity?:{}
    relative_product_quantity?:{}
}
const {inputValue,CSSInputClass,product_quantity,relative_product_quantity} = Astro.props;
---

<div class="checkboxes__item">
      <label class="checkbox style-e">
        <input type="checkbox" name={inputValue}  class={CSSInputClass} value={inputValue}/>
        <div class="checkbox__checkmark"></div>
      <div class="checkbox__body">{inputValue} <span class="quantity">{product_quantity}</span> <span class="relative-quantity"> ({relative_product_quantity})</span></div>
      </label>
    </div>

<style>
    .quantity,.relative-quantity{
    position: absolute;
    right: -.5rem; 
    font-size: .75rem;
  }
  .relative-quantity{
    right: -2.1rem;
  }
     .checkboxes__item {
  padding: 15px;
  width: 50%;
}
.checkbox.style-e {
  display: inline-block;
  position: relative;
  padding-left: 50px;
  cursor: pointer;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}
.checkbox.style-e input {
  position: absolute;
  opacity: 0;
  cursor: pointer;
  height: 0;
  width: 0;
}
.checkbox.style-e input:checked ~ .checkbox__checkmark {
  background-color: var(--clr-accent-400);
}
.checkbox.style-e input:checked ~ .checkbox__checkmark:after {
  left: 21px;
}
.checkbox.style-e:hover input ~ .checkbox__checkmark {
  background-color: #eee;
}
.checkbox.style-e:hover input:checked ~ .checkbox__checkmark {
  background-color: var(--clr-accent-400);
}
.checkbox.style-e .checkbox__checkmark {
  position: absolute;
  top: 1px;
  left: 0;
  height: 22px;
  width: 40px;
  background-color: #eee;
  transition: background-color 0.25s ease;
  border-radius: 11px;
}
.checkbox.style-e .checkbox__checkmark:after {
  content: "";
  position: absolute;
  left: 3px;
  top: 3px;
  width: 16px;
  height: 16px;
  display: block;
  background-color: #fff;
  border-radius: 50%;
  transition: left 0.25s ease;
}
.checkbox.style-e .checkbox__body {
    text-transform: uppercase;
  color: #333;
  line-height: 1.4;
  font-size: 15px;
  width: 100px;
  transition: color 0.25s ease;
}

</style>